<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="15dp"
    android:elevation="25dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/avatarD"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="start|top"
            android:layout_margin="15dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/usernameD"
            android:layout_toRightOf="@+id/avatarD"
            android:layout_toEndOf="@+id/avatarD"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="18dp"
            />

        <TextView
            android:id="@+id/timeD"
            android:layout_toRightOf="@id/avatarD"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@id/avatarD"
            android:layout_marginLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/usernameD"
            />

        <TextView
            android:id="@+id/contentDText"
            android:layout_below="@id/avatarD"
            android:layout_marginTop="8dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp" />

        <ImageView
            android:id="@+id/contentDImage"
            android:layout_below="@+id/contentDText"
            android:layout_marginStart="15dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp" />


        <ImageView
            android:id="@+id/excitingD"
            android:src="@mipmap/exciting1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toLeftOf="@+id/naiveD"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/naiveD"
            android:layout_marginBottom="15dp"/>

        <ImageView
            android:id="@+id/naiveD"
            android:src="@mipmap/naive1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toLeftOf="@+id/favoriteD"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_toStartOf="@+id/favoriteD"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"/>


        <ImageView
            android:id="@+id/favoriteD"
            android:src="@mipmap/favorite1"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="15dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>