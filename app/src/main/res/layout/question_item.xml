<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="360dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="15dp"
    android:elevation="25dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#EBEBEB"
        android:gravity="center">

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/avatarQL"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="start|top"
            android:layout_margin="15dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/usernameQL"
            android:layout_toRightOf="@+id/avatarQL"
            android:layout_toEndOf="@+id/avatarQL"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="18dp"
            />

        <TextView
            android:id="@+id/timeQL"
            android:layout_toRightOf="@id/avatarQL"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@id/avatarQL"
            android:layout_marginLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/usernameQL"
            />

        <TextView
            android:id="@+id/titleQL"
            android:textColor="#030303"
            android:textSize="16sp"
            android:layout_below="@+id/avatarQL"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp" />


        <TextView
            android:maxLines="5"
            android:ellipsize="end"
            android:id="@+id/contentQLText"
            android:layout_below="@id/titleQL"
            android:textColor="	#515151"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp" />

        <ImageView
            android:id="@+id/contentQLImage"
            android:layout_below="@+id/contentQLText"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="15dp"
            android:layout_width="150dp"
            android:layout_height="150sp"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="20dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/contentQLImage"
            android:layout_marginTop="10dp"
            android:background="#ADADAD"
            />

        <ImageView
            android:id="@+id/commentQL"
            android:src="@mipmap/comment"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toLeftOf="@+id/excitingQL"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/excitingQL"
            android:layout_marginBottom="15dp" />


        <ImageView
            android:id="@+id/excitingQL"
            android:src="@mipmap/exciting1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toLeftOf="@+id/naiveQL"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/naiveQL"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/excitingNumberQL"
            android:layout_width="10dp"
            android:layout_height="10dp" />

        <ImageView
            android:id="@+id/naiveQL"
            android:src="@mipmap/naive1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toLeftOf="@+id/favoriteQL"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_toStartOf="@+id/favoriteQL"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/naiveNumberQL"
            android:layout_width="10dp"
            android:layout_height="10dp" />

        <ImageView
            android:id="@+id/favoriteQL"
            android:src="@mipmap/favorite1"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="15dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>