<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="15dp"
    android:elevation="25dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/avatarF"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="start|top"
            android:layout_margin="15dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/usernameF"
            android:layout_toRightOf="@+id/avatarF"
            android:layout_toEndOf="@+id/avatarF"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="18dp"
            />

        <TextView
            android:id="@+id/timeF"
            android:layout_toRightOf="@id/avatarF"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@id/avatarF"
            android:layout_marginLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/usernameF"
            />

        <TextView
            android:id="@+id/titleF"
            android:layout_below="@+id/avatarF"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/contentFText"
            android:layout_below="@id/titleF"
            android:layout_marginTop="8dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp" />

        <ImageView
            android:id="@+id/contentFImage"
            android:layout_below="@+id/contentFText"
            android:layout_marginStart="15dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp" />

        <ImageView
            android:id="@+id/commentF"
            android:src="@mipmap/comment"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toLeftOf="@+id/excitingF"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/excitingF"
            android:layout_marginBottom="15dp" />


        <ImageView
            android:id="@+id/excitingF"
            android:src="@mipmap/exciting1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toLeftOf="@+id/naiveF"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/naiveF"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/excitingNumberF"
            android:layout_width="10dp"
            android:layout_height="10dp" />

        <ImageView
            android:id="@+id/naiveF"
            android:src="@mipmap/naive1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toLeftOf="@+id/favoriteF"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_toStartOf="@+id/favoriteF"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/naiveNumberF"
            android:layout_width="10dp"
            android:layout_height="10dp" />

        <ImageView
            android:id="@+id/favoriteF"
            android:src="@mipmap/favorite1"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="15dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>