<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity"
    android:background="@mipmap/main"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <EditText
        android:hint="请输入用户名"
        android:paddingStart="15dp"
        android:textColorHint="#FAFAFA"
        android:padding="10dp"
        android:id="@+id/registered1"
        android:layout_marginTop="250dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:textColor="#303030"
        android:paddingLeft="15dp" />

    <EditText
        android:hint="请输入密码"
        android:paddingStart="15dp"
        android:textColorHint="#FAFAFA"
        android:padding="10dp"
        android:id="@+id/registered2"
        android:layout_marginTop="35dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_below="@+id/registered1"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:paddingLeft="15dp"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/registeredbtn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registered2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="注册"
        android:background="@drawable/bt_shapee"
        android:textColor="#F4F4F4"
        android:textStyle="bold"
        android:textSize="18sp"
        />

</RelativeLayout>